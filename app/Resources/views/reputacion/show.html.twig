{% extends 'base_logueado.html.twig' %}

{% block contenido %}
    <h1>Reputación</h1>

    <div class="row">
        <div class="col-md-12">
            <p>Descripción: {{ reputacion.descripcion }} </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <p>Máximo: {{ reputacion.maximo }} </p>
        </div>
    </div>

    <div class="row">
        
            <br>
            <a href="{{ path('reputacion_edit', { 'id': reputacion.id }) }}" class="btn btn-warning">Editar</a>
            <br>
            <br>
            
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
            <br>
            <a href="{{ path('reputacion_index') }}" class="btn btn-default">Volver</a>
    </div>
{% endblock %}
