    {% extends 'base_logueado.html.twig' %}

{% block contenido %}
    <div class="row">
        <h1>Calificaciones recibidas</h1> 
    </div>
    <br>
    <div class="row">
        <table class="table table-responsive table-hover">
            <thead>
                <tr>
                    <th>Calificaci√≥n</th>
                    <th>Puntaje</th>
                    <th>Usuario</th>
                    <th>Favor</th>
                </tr>
            </thead>
            <tbody>
                {% for calificacion in usuario.calificacionesRecibidas %}
                    <tr>
                        <td>{{ calificacion.descripcion }}</td>
                        <td>{{ calificacion.puntaje }}</td>
                        <td>{{ calificacion.usuarioAutor }}</td>
                        <td><a href="{{path('favor_show', {'id':calificacion.favor.id})}}" class="btn btn-link">Ver favor</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">
                            Usted no posee calificaciones.
                        </td>     
                    </tr>
                {% endfor %}
            </tbody>

        </table>
    </div>
    <a href="{{path('usuario_show', {'id':usuario.id})}}" class="btn btn-default">Volver </a>

{% endblock %}
