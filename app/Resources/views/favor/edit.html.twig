{% extends 'base_logueado.html.twig' %}

{% block contenido %}
    <h1><span><i class="fa fa-handshake-o" aria-hidden="true"></i> Modificar favor </span></h1>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-xs-12">
            {{form_row(edit_form.titulo, {'attr':{'class':'form-control'}})}}
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-xs-12">
            {{form_row(edit_form.detalle, {'attr':{'class':'form-control'}})}}
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-xs-6">
            {{form_row(edit_form.categoria, {'attr':{'class':'form-control'}})}}
        </div>
        <div class="col-xs-6">
            {{form_row(edit_form.localidad, {'attr':{'class':'form-control'}})}}
        </div>
    </div>
    <br>
    
    <div class="row">
        <div class="col-xs-6">
             {{form_label(edit_form.foto)}}
             <br>
             <br>
             {% if favor.rutaFoto %}
                <img src="{{ asset('uploads/favor-fotos/' ~ favor.rutaFoto) }}" alt="" width="100">
                <br>
                <br>
            {% endif %}
            {{form_widget(edit_form.foto, {'attr':{'class':'form-control'}})}}
            {{form_errors(edit_form.foto)}}
        </div>
    </div>
        {# {{ form_widget(edit_form) }} #}
        <br>
        <input type="submit" value="Guardar" class="btn btn-block btn-success" />
    {{ form_end(edit_form) }}

    <br>

    <button class="btn btn-default" href="{{ path('favor_index') }}">Volver</button>

{% endblock %}


{% block stylesheets %}
<style>
    body { background: #FFF; font: 18px/1.5 sans-serif; }
    h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
    h1 { font-size: 36px; }
    h2 { font-size: 21px; margin-bottom: 1em; }
    p { margin: 0 0 1em 0; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }
    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    #wrapper {margin: 1em auto; max-width: 800px; width: 95%; }
    #container { padding: 2em; }
    #welcome, #status { margin-bottom: 2em; }
    #welcome h1 span { display: block; font-size: 75%; }
    #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
    #icon-book { display: none; }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }
        #icon-book { display: inline-block; }
        #status a, #next a { display: block; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }
</style>
{% endblock %}  